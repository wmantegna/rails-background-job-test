<table class="table table-hover table-bordered" style="max-width: 500px;">
  <thead>
    <tr>
      <td>Last Updated By</td>
      <td>Human?</td>
      <td>Job?</td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |i| %>
      <tr>
        <td><%= i.last_updated_by %></td>
        <td><%= i.created_at %></td>
        <td><%= i.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>